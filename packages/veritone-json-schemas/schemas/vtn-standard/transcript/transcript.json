{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://docs.veritone.com/schemas/vtn-standard/transcript.json",
  "title": "vtn-standard.object",
  "description": "Standard engine output for Object at Veritone",
  "type": "object",
  "definitions": {
    "words": {
      "type": "array",
      "minItems": 1,
      "if": {
        "minItems": 2
      },
      "then": {
        "items": {
          "allOf": [
            {
              "properties": {
                "word": {
                  "$ref": "master.json#/definitions/word"
                },
                "confidence": {
                  "$ref": "master.json#/definitions/confidence"
                },
                "utteranceLength": {
                  "$ref": "master.json#/definitions/utteranceLength"
                },
                "bestPath": {
                  "type": "boolean"
                }
              },
              "required": [
                "word",
                "confidence",
                "utteranceLength"
              ]
            }
          ],
          "uniqueItems": true
        },
        "requireBestPath": true
      },
      "else": {
        "items": {
          "allOf": [
            {
              "properties": {
                "word": {
                  "$ref": "master.json#/definitions/word"
                },
                "confidence": {
                  "$ref": "master.json#/definitions/confidence"
                }
              }
            }
          ],
          "required": [
            "word"
          ]
        }
      }
    }
  },
  "properties": {
    "validationContracts": {
      "type": "array",
      "items": {
        "const": "transcript"
      }
    },
    "series": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "properties": {
              "words": {
                "$ref": "#/definitions/words"
              },
              "startTimeMs": {
                "type": "integer",
                "minimum": 0
              },
              "stopTimeMs": {
                "type": "integer",
                "minimum": 0
              },
              "language": {
                "$ref": "master.json#/definitions/language"
              }
            },
            "required": [
              "startTimeMs",
              "stopTimeMs"
            ]
          }
        ]
      }
    }
  },
  "anyOf": [
    {
      "$ref": "master.json#/definitions/header"
    }
  ],
  "allOf": [
    {
      "properties": {
        "language": {
          "$ref": "master.json#/definitions/language"
        }
      }
    }
  ]
}
